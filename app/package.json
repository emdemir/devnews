  "scripts": {
    "watch-web": "concurrently --handle-input -k -p \"[{name}]\" -n \"TSC,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node-web\"",
    "watch-api": "concurrently --handle-input -k -p \"[{name}]\" -n \"TSC,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node-api\"",
    "watch-ts": "tsc -w --preserveWatchOutput",
    "watch-node-web": "nodemon -w dist/ --exec \"node dist/src/app.js --mode web\"",
    "watch-node-api": "nodemon -w dist/ --exec \"node dist/src/app.js --mode api\""
