{
    "include": ["src/**/*"],

    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",

        "outDir": "dist",
        "baseUrl": "src",

        "target": "ES2018",
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "allowJs": false,
        "strict": true,

        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    }
}
